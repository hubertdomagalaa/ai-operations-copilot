# Environment variables for AI Operations Copilot
# Copy this file to .env and fill in values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# LLM Configuration
LLM_PROVIDER=openrouter  # mock, openrouter
OPENROUTER_API_KEY=your-openrouter-api-key-here
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_TEMPERATURE=0.2

# Shadow Mode (for testing real LLM without full workflow)
SHADOW_MODE=false

# Vector Store Configuration
VECTOR_STORE_TYPE=chroma  # chroma, pinecone, etc.
VECTOR_STORE_URL=

# For Pinecone (if used)
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Observability
ENABLE_TRACING=true
LOG_LEVEL=INFO

# For OpenTelemetry (when implemented)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
